function playGame(playerMove) {
/*
pickComputerMove() will generate random number. This number is compared to playerMove value inside nested if statements to generate game logic.
*/

const computerMove = pickComputerMove();
let result = ' ';

if(playerMove === 'scissors') {
    if(computerMove === 'rock') {
          result = 'You lose';
          }
          else if(computerMove === 'paper'){
          result = 'You win';
          }
          else if(computerMove === 'scissors'){
          result = 'Tie';
          }
        }
        /*
        inner HTML should be adjusted with `${}`
        */
      HTML element Text Content = result;
      };
